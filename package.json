{
  "name": "validator",
  "version": "1.0.0",
  "description": "General purpose JSON object validator",
  "author": "Joost Lubach",
  "license": "MIT",
  "scripts": {
    "build": "pnpm clean && pnpm build:esm && pnpm build:cjs",
    "build:esm": "pnpm build:tsc:esm && pnpm build:copy:esm",
    "build:tsc:esm": "tsc -p tsconfig.prod.json --module ESNext --outDir dist/esm",
    "build:copy:esm": "copyfiles -u 1 src/**/*.yml src/**/*.css dist/esm",
    "build:cjs": "pnpm build:tsc:cjs && pnpm build:copy:cjs",
    "build:tsc:cjs": "tsc -p tsconfig.prod.json --module CommonJS --outDir dist/cjs",
    "build:copy:cjs": "copyfiles -u 1 src/**/*.yml src/**/*.css dist/cjs",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "check": "tsc -p . --noEmit",
    "test": "NODE_ENV=test jest"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./types": {
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/types/index.js"
      },
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/types/index.js"
      }
    }
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "ytil": "workspace:^"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.104",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  }
}
